{
  "name": "folder-server",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript + Express folder server that verifies a Postgres connection and exposes directory indexing.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsoa routes && tsc && npm run tsoa:spec",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "tsoa:spec": "tsoa spec -o dist/swagger.json",
    "gen:docs": "npm run tsoa:spec",
    "docs:quickref": "node scripts/generate-api-quickref.js",
    "reindex": "curl -X POST http://localhost:4000/api/reindex?force=true",
    "docker:build": "docker build -t folder-server .",
    "docker:run": "docker-compose up",
    "restart": "npm run build && docker-compose down && docker-compose build --no-cache && docker-compose up -d"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "swagger-ui-express": "^4.6.3",
    "express": "^4.19.2",
    "multer": "^2.0.2",
    "pg": "^8.11.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.20",
    "@types/multer": "^2.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/node": "^22.5.2",
    "@types/pg": "^8.16.0",
    "tsoa": "^4.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
